<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".UI.HomeFragment"
    android:layout_height="wrap_content">


    <include layout="@layout/app_head"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_customer"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/customer"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="公司客户"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/count_customer_total"
                        android:text="3位"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:id="@+id/count_customer_mine"
                        android:text="您有3位客户，占比100%"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_opportunity"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/money"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="公司商机"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:id="@+id/count_opportunity_total"
                        android:textStyle="bold"
                        android:text="3个"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:id="@+id/count_opportunity_mine"
                        android:text="您有3个商机，占比100%"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_contract"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/document"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="已创建合同"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/count_contract_total"
                        android:text="3个"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:id="@+id/count_contract_mine"
                        android:text="您有3份合同，占比100%"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_businessManager"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/business"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="业务管理"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="3项"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="员工目标设置、提醒设置、报表展现"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_contact"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/contact"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"

                        android:text="联系人"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/count_contact_total"
                        android:text="3个"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:id="@+id/count_contact_mine"
                        android:text="您有3个联系人，占比100%"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/bt_product"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/product"
                    android:layout_margin="40dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text="公司产品"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:id="@+id/count_product_total"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="1种"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/WHITE"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
